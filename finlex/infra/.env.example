# Environment variables for FinLex Audit AI
# Copy this file to .env and fill in your actual values

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
DATABASE_URL=postgresql://finlex_user:finlex_pass@localhost:5432/finlex_db
POSTGRES_DB=finlex_db
POSTGRES_USER=finlex_user
POSTGRES_PASSWORD=finlex_pass

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Service URLs (for development)
INGEST_SERVICE_URL=http://localhost:8001
EXTRACTOR_SERVICE_URL=http://localhost:8002
MATCHER_SERVICE_URL=http://localhost:8003
RAGGENERATOR_SERVICE_URL=http://localhost:8004
API_SERVICE_URL=http://localhost:8000

# Vector Database Configuration
VECTOR_DB_URL=http://localhost:8010
FAISS_INDEX_PATH=./data/obligations.index

# Application Configuration
SQL_ECHO=false
LOG_LEVEL=INFO

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production

# External API Configuration
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key_here

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090